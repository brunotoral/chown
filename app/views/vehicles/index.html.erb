<section class="section">
  <%= section_title t '.heading' %>

  <div class="box">
  <nav class="level">
      <div class="level-left">
        <div class="level-item">
        </div>
      </div>
      <div class="level-right" id="filters">
        <div class="level-item">
          <nav class="buttons has-addons are-small">
            <%= link_to 'Transferiveis', vehicles_path(filter: :transferable), class: 'button' %>
            <%= link_to 'Transferidos', vehicles_path(filter: :transfered) , class: 'button' %>
            <%= link_to 'Por proprietário', vehicles_path(filter: :owner_name) , class: 'button' %>
            <%= link_to 'Todos', vehicles_path, class: 'button' %>
          </nav>
        </div>
      </div>
    </nav>

    <table id="vehicles" class="table is-fullwidth is-hoverable">
      <thead>
        <tr>
          <th>Proprietário</th>
          <th>Tido de Documento</th>
          <th>Documento do Proprietário</th>
          <th>Placa do Veículo</th>
          <th></th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @vehicles.each do |vehicle| %>
          <tr>
            <td><%= link_to vehicle.person.name, person_path(vehicle.person) %></td>
            <td><%= vehicle.document_kind.upcase %></td>
            <td><%= vehicle.document_number %></td>
            <td><%= vehicle.license_plate %></td>
            <td><%= link_to t('.actions.update'), edit_person_vehicle_path(vehicle.person, vehicle) %></td>
            <td><%= link_to t('.actions.delete'), person_vehicle_path(vehicle.person, vehicle), method: :delete %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <%== pagy_bulma_nav(@pagy) %>
  </div>
</section>
