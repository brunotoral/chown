<section class="section">
  <%= section_title t '.heading' %>

  <div class="box">
    <div class="buttons are-small">
      <%= link_to 'Novo Veículo', new_person_vehicle_path(@person), class: 'button is-success is-small' %>
    </div>

    <table id="person" class="table is-fullwidth is-hoverable">
      <thead>
        <tr>
          <th>Nome</th>
          <th>Documento</th>
          <th></th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td><%= @person.name %></td>
          <td><%= @person.document_number %></td>
          <td><%= link_to t('.actions.update'), edit_person_path(@person) %></td>
          <td><%= link_to t('.actions.delete'), person_path(@person), method: :delete %></td>
        </tr>
      </tbody>
    </table>

    <%= section_title 'endereço' %>

    <table id="address" class="table is-fullwidth is-hoverable">
      <thead>
        <tr>
          <th>Estado</th>
          <th>Cidade</th>
          <th>Bairro</th>
          <th>Rua</th>
          <th>Número</th>
          <th>CEP</th>
          <th>Complemento</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td><%= @person.state %></td>
          <td><%= @person.city %></td>
          <td><%= @person.district %></td>
          <td><%= @person.street %></td>
          <td><%= @person.number %></td>
          <td><%= @person.zip_code %></td>
          <td><%= @person.complement %></td>
        </tr>
      </tbody>
    </table>

    <%= section_title 'veículos' %>

    <table id="vehicles" class="table is-fullwidth is-hoverable">
      <thead>
        <tr>
          <th>Placa</th>
          <th>Renavam</th>
          <th>CRV</th>
          <th>Data do CRV</th>
          <th></th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @person.vehicles&.each do |vehicle| %>
          <tr>
            <td><%= vehicle.license_plate %></td>
            <td><%= vehicle.renavam %></td>
            <td><%= vehicle.crv_number %></td>
            <td><%= vehicle.crv_date %></td>
            <td><%= link_to t('.actions.update'), edit_person_vehicle_path(@person, vehicle) %></td>
            <td><%= link_to t('.actions.delete'), person_vehicle_path(@person, vehicle), method: :delete %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</section>
