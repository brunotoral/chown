<div class="field">
  <%= f.label :name, class: 'label' %>
  <div class="control">
    <%= f.text_field :name, class: 'input', required: true %>
  </div>
</div>

<div class="field">
  <div class="control">
    <% Person.document_kinds.keys.each do |kind| %>
      <label class="radio">
        <%= f.radio_button :document_kind, kind %>
        <%= t(kind, scope: 'person_document_kinds') %>
      </label>
    <% end %>
  </div>
</div>

<div class="field">
  <%= f.label :document_number, class: 'label' %>
  <div class="control">
    <%= f.text_field :document_number, class: 'input', required: true %>
  </div>
</div>
